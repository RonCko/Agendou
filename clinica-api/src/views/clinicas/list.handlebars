<h2>Clínicas</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>CNPJ</th>
      <th>Endereço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each clinicas}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.cnpj}}</td>
        <td>{{this.endereco}}</td>
        <td>
          <a href="/clinicas/{{this.id}}/edit">Editar</a>
          <form action="/clinicas/{{this.id}}?_method=DELETE" method="post" style="display:inline">
            <button>Excluir</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
